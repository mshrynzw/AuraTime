{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "typeRoots": ["./node_modules/@types"],
    "types": ["jest", "node"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "__tests__/components/form/RegisterForm.validation.test.tsx.bak",
    "__tests__/components/form/RegisterForm.basic.test.tsx.bak",
    "__tests__/components/form/RegisterForm.errors.test.tsx.bak",
    "__tests__/components/form/RegisterForm.misc.test.tsx.bak"
  ],
  "exclude": ["node_modules"]
}
